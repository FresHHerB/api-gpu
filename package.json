{
  "name": "api-gpu",
  "version": "1.0.0",
  "description": "Video processing API with Vast.ai GPU auto-scaling",
  "main": "dist/orchestrator/index.js",
  "scripts": {
    "build": "npm run build:orchestrator && npm run build:worker",
    "build:orchestrator": "tsc -p tsconfig.orchestrator.json",
    "build:worker": "tsc -p tsconfig.worker.json",
    "dev:orchestrator": "ts-node-dev --respawn --transpile-only src/orchestrator/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "start:orchestrator": "node dist/orchestrator/index.js",
    "start:worker": "node dist/worker/index.js",
    "docker:build:worker": "docker build -f docker/worker.Dockerfile -t api-gpu-worker:latest .",
    "docker:push:worker": "docker push api-gpu-worker:latest",
    "docker:build:orchestrator": "docker build -f docker/orchestrator.Dockerfile -t api-gpu-orchestrator:latest .",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "video",
    "processing",
    "ffmpeg",
    "gpu",
    "cuda",
    "vast.ai",
    "auto-scaling",
    "orchestrator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
